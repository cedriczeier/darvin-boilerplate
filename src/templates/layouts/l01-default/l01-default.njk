<!DOCTYPE html>
<html class="no-js" lang="de">
   <head>
      <meta charset="utf-8">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <title>{{ title }}</title>

      <link rel="preload" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/assets/fonts/museo-700.woff" as="font" type="font/woff" crossorigin>

      <meta name="description" content="Lorem description">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="format-detection" content="telephone=no">

      <link rel="apple-touch-icon" sizes="180x180" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/images/favicons/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/images/favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/images/favicons/favicon-16x16.png">
      <link rel="manifest" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/images/favicons/site.webmanifest">
      <link rel="mask-icon" href="{{ darvin.serverBase }}{{ darvin.serverAssets }}/images/favicons/safari-pinned-tab.svg" color="#5bbad5">
      <meta name="msapplication-TileColor" content="#da532c">
      <meta name="theme-color" content="#ffffff">

      <meta property="og:url" content="http://www.tobiasfrei.ch" />
      <meta property="og:type" content="website" />
      <meta property="og:title" content="title lorem" />
      <meta property="og:description" content="lorem impsun" />
      <meta property="og:image" content="https://www.tobiasfrei.ch" />
      <meta property="og:locale" content="ch" />

      <script>
        (function() {
          if( "fonts" in document ) {
            // Optimization for Repeat Views
            if( sessionStorage.fontsLoadedCriticalFoftPreload ) {
              document.documentElement.className += " fonts-loaded-2";
              return;
            }

            document.fonts.load("MuseoSubset").then(function () {
              document.documentElement.className += " fonts-loaded-1";
              Promise.all([
                document.fonts.load("Museo500"),
                document.fonts.load("Museo700"),
                document.fonts.load("MuseoSans500"),
                document.fonts.load("MuseoSan700")
              ]).then(function () {
                document.documentElement.className += " fonts-loaded-2";
                // Optimization for Repeat Views
                sessionStorage.fontsLoadedCriticalFoftPreload = true;
              });
            });
          }
        })();
       </script>

   </head>
   <body>
      <div id="l-pagewrapper">
        <!-- start main -->
        <main id="l-main">
          <div id="l-content">
            {% block content %}{% endblock %}
          </div>
        </main>
      </div>
    </body>
</html>
